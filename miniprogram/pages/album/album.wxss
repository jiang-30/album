page {
  padding-left: 20rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.row {
  display: flex;
  flex-wrap: wrap;
  margin-left: -4rpx;
  margin-right: -4rpx;
}
.row .col-3 {
  flex: 0 0 33.333333%;
  max-width: 33.3333333%;
  padding: 4rpx;
}

.img-item {
  position: relative;
  width: 100%;
  padding-bottom: 100%;
  height: 0;
}
.img-item .box {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  border-radius: 5rpx;
  background-color: #f1f1f1;
  overflow: hidden;
}
.img-item .img {
  width: 100%;
  height: 100%;
}
.img-item .checkbox {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 30rpx;
  height: 30rpx;
  background-color: #f00;
}

.fixed-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  border-top: 1rpx solid #eee;
  background-color: #fff;
}
.fixed-bar .box {
  display: flex;
}
.fixed-bar .box .item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50px;
}
.fixed-bar .item-setting {
  position: relative;
}
.fixed-bar .item-setting .operation-box {
  position: absolute;
  bottom: 50px;
  left: 0;
  background-color: #fff;
}

.top{
  width: 100%;
  height: auto;
  display: flex;
  justify-content: center;
}  
.top image{
  width: 652rpx;
  height: 330rpx;
}

.lst{
  width: 100%;
  height: auto;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.lst .row{
  width: 100%;
  height: 160rpx;
  line-height: 160rpx;
  border-bottom: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row .left{
  width: 600rpx;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row .left image {
  width: 84rpx;
  height: 84rpx;
}
.row .middle {
  width: auto;
  height: 120rpx;
  margin-left: 20rpx;
}
.row .middle .title {
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  color: #000;
}
.row .middle .subtitle{
  width: auto;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #999;
}
.row .right {
  width: 90rpx;
  height: 120rpx;
}
.row .right image{
  width: 32rpx;
  height: 32rpx;
}

.row .left text{
  color: #191919;
  font-size: 30rpx;
  padding-left: 20rpx;
  vertical-align: middle;
}

<view class="title-section">
  <view class="label">相册名称：</view>
  <input class="input" value="{{ info.title }}" type="text" placeholder="相册名称"  bind:blur="onTitleChange" bind:confirm="onTitleChange"/>
</view>

<b-status status="{{ pageStatus }}">
  <view class="row">
    <view class="col-4" wx:for="{{ info.list }}" wx:key="path">
      <view class="img-item" bind:tap="onPhotoClick">
        <b-image src="{{ item.fileId }}" ratio="100"></b-image>
        <view class="checkbox" wx:if="{{ mode == 'operation' }}"></view>
      </view>
    </view>
  </view>
</b-status>



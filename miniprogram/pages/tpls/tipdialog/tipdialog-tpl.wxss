.Popup{
  width: 580rpx;
  height: 720rpx;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  margin: -370rpx 85rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
 }
.Popup .title{width: 100%; height: 80rpx; line-height: 80rpx; font-size:32rpx;color:#000; font-weight: bold; text-align:center;}
.Popup .close{width: 30rpx; height: 30rpx; position: absolute; top: 25rpx; right: 25rpx;}
.Popup .content{ width: 100%; height: 610rpx; padding:0 20rpx; box-sizing: border-box; font-size:26rpx;color:#555;}
.mask{position:fixed;top:0;right:0;left:0;bottom:0;background-color:rgba(0,0,0,0.65);z-index:310;}
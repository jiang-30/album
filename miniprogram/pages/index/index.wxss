.nav-section{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: #f00;
}
.nav-section .nav-bar {
  position: relative;
  display: flex;
  align-items: center;
  height: 44px;
}
.nav-section .nav-aside {
  width: 100rpx;
  padding: 0 10px;
}
.nav-section .nav-left {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.nav-section .nav-title {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar {
  background-color: #0f0;
  width: 30px;
  height: 30px;
  border-radius: 15px;
  overflow: hidden;
}

.main-section {
  display: flex;
  flex-wrap: wrap;
}
.main-section .col {
  flex: 0 0 50%;
  max-width: 50%;
  padding: 10rpx;
  box-sizing: border-box;
}
.item {
  background-color: #fff;
  border-radius: 4rpx;
  overflow: hidden;
  box-shadow: 1px 1px 10px 0 #ddd;
}

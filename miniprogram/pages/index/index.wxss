.avatar {
  width: 100%;
  height: 100%;
}
.box {
  padding: 10rpx;
  display: flex;
}
.box .list1-box,
.box .list2-box {
  flex: 1;
}
.box .list1-box {
  margin-right: 10rpx;
}
.item {
  margin-top: 10rpx;
  background-color: #fff;
  border-radius: 4px;
  overflow: hidden;
  box-shadow: 1px 1px 10px 0 #ddd;
}
.add-section {
  position: fixed;
  bottom: 50px;
  right: 10px;
  z-index: 9;
  width: 44px;
  height: 44px;
  border-radius: 20px;
  background-color: #f00;
}

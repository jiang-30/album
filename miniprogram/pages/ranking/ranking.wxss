.top{
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top .title{
  width: 600rpx;
  height: 70rpx;
  padding: 5rpx 8rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  background-color: #EEEEF0;
  border-radius: 38rpx;
  color: #000;
  font-weight: bold;
}
.top .title view{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.top .title .huomiao{
  width: 36rpx;
  height: 36rpx;
  margin-right: 20rpx;
}
.top .title .dot{
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
}
.top .title .selected{
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: #fff;
  border-radius: 30rpx;
}



.lst{
  width: 100%;
  height: auto;
  padding: 20rpx;
  box-sizing: border-box;
}
.lst .row{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  margin-bottom: 20rpx;
  border-bottom: #333;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.row .left{
  width: 100rpx;
  height: 90rpx;
}
.row .left image {
  width: 90rpx;
  height: 90rpx;
}
.row .middle {
  width: 310rpx;
  height: 90rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  margin-right: 100rpx;
  border-radius: 90rpx;
  background-color: #EEEEEE;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: left;
}
.row .middle image {
  width: 60rpx;
  height: 60rpx;
}
.row .middle text{
  width: auto;
  height: 90rpx;
  line-height: 90rpx;
  margin-left: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}
.row .right {
  width: 300rpx;
  height: 90rpx;
  padding: 8rpx 10rpx;
  box-sizing: border-box;
  border-radius: 90rpx;
  background-color: #000;
  color: #fff;
  font-size: 24rpx;
}
.row .right view{
  width: 240rpx;
  height: 38rpx;
  line-height: 38rpx;
  text-align: center;
}


